        {% if search == false %}
            <ul class="pagination">
                {% if currentPage != 1 %}
                    <li class="page-item"><a href=" {{ path('listofpeople', {'page': currentPage-1}) }}" class="page-link">previous page</a></li>
                    <li class="page-item"><a href=" {{ path('listofpeople', {'page': currentPage+1}) }}" class="page-link">next page</a></li>
                    <li class="page-item">page {{ currentPage }}/{{ numberOfPages }}</li>
                {% elseif currentPage == numberOfPages %}
                    <li class="page-item"><a href=" {{ path('listofpeople', {'page': currentPage-1}) }}" class="page-link">previous page</a></li>
                    <li class="page-item">page {{ numberOfPages }}/{{ numberOfPages }}</li>
                {% elseif currentPage <= 1 %}
                    <li class="page-item"><a href=" {{ path('listofpeople', {'page': currentPage+1}) }}" class="page-link">next page</a></li>
                    <li class="page-item">page 1/{{ numberOfPages }}</li>
                {% endif %}
            </ul>
        {% elseif peopleArray is empty %}
            <h2>No users corresponding to your search :(</h2>
        {% endif %}
    </div>
