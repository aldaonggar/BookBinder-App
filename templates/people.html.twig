                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ person.firstname }}</h5>
                            <p class="card-text">{{ person.lastname }}</p>
                            <a href="{{ path('person', {'id':person.id}) }}" class="btn btn-primary">View Details</a>
