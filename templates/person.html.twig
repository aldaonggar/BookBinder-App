{% extends "base.html.twig" %}

{% block title %}Person Profile{% endblock %}

{% block additional_styles %}
    <link rel="stylesheet" href="{{ asset('css/person.css') }}">
{% endblock %}

{% block content %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/200" class="img-fluid rounded-circle" alt="Person's Picture">
            </div>
            <div class="col-md-8">
                <h2>{{ app.user.firstname() }} {{ app.user.lastname() }}</h2>
                <p><strong>Gender:</strong> {{ app.user.sex() }}</p>
                <p><strong>Age:</strong> {{ app.user.birthday()|date('Y-m-d') }}</p>
                <p><strong>Favorite Library:</strong> {{ app.user.favoriteLibrary() }} </p>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3>Books of Interest</h3>
                <ul class="list-group">
                    {#{% for book in app.user.favoriteBooks()|split(',') %}
                        <li class="list-group-item">{{ book }}</li>
                    {% endfor %}#}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
