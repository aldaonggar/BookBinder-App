{# templates/reset_password/request.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset password request</title>
    <link rel="stylesheet" href="{{ asset('css/reset_password.css') }}">
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>
<body>
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <div class="login-container">
        <h2>Reset your password</h2>
        {{ form_start(requestForm) }}
        {{ form_label(requestForm.email) }}
        {{ form_widget(requestForm.email, {'attr': {'placeholder': 'Enter your email'}}) }}
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert" style="color: red; font-weight: bold; margin-top: 1em;">{{ flash_error }}</div>
        {% endfor %}
        <button class="login-button">Reset password</button>
        {{ form_end(requestForm) }}
    </div>

</body>
</html>


