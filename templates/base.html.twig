<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Website Title{% endblock %}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    {% block additional_styles %}{% endblock %}
</head>
<body class="main-body">
<nav class="navbar navbar-expand-lg custom-navbar">
    <a class="navbar-brand home-link" href="{{ path('home') }}">BookBinder</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('listofbooks', {'page': 1}) }}">Books</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Libraries</a>
            </li>
        </ul>
    </div>
    <div class="navbar-nav ml-auto">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('myprofile') }}" class="btn btn-outline-primary mr-2 user-settings-btn">My Profile</a>
            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger logout-btn">Log Out</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-outline-primary login-btn">Log In</a>
        {% endif %}
    </div>
</nav>
<main role="main" class="container main-content">
    {% block content %}{% endblock %}
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="{{ asset('script/APIHandler.js') }}"></script>
</body>
</html>
