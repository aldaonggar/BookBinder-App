{#templates/book.html.twig#}
{% extends "base.html.twig" %}

{% block title %}Book Details{% endblock %}

{% block additional_styles %}
    <link rel="stylesheet" href="{{ asset('css/book.css') }}">
{% endblock %}

{% block content %}
    <div class="container mt-4">
        {% if book is not empty %}
        <div class="row">
            <div class="col-md-4">
                <img src="{{ book.cover }}" class="img-fluid" alt="Book Cover">
            </div>
            <div class="col-md-8">
                <h2>{{ book.title }}
                    <i id="favoriteIcon" class="far fa-star text-primary clickable" data-book-id="{{ book.id }}"></i>
                </h2>
                <h4>{{ book.author }}</h4>
                <p><strong>Average Rating:</strong> 4.5/5</p>
                <p id ="bookDescription" data-isbn="{{ book.isbn }}">

                </p>
                <button type="button" class="btn btn-primary">Reserve</button>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3>People Interested</h3>
                <ul class="list-group">
                    {% for user in favoritedUsers %}
                        <li class="list-group-item">{{ user.getUser().getFirstname() }} {{ user.getUser().getLastname()  }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% else %}
        <h2>There's no book of specified ID :(</h2>
        {% endif %}

    </div>
{% endblock %}
